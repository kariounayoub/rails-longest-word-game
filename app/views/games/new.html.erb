<ul>
  <% @letters.each do |letter| %>
    <li><%= letter %></li>
  <% end %>
</ul>
<form action="score" method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <label for="answer">What is the longest word you can find?</label>
  <input type="text" id="answer" name="answer">
  <input type="hidden" name="letters" value ="<%= @letters.join %>"">
  <input type="submit">
</form>
